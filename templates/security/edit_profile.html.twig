{% extends 'dashboard.html.twig' %}

{% block title %}MicroDonjon - Profil de {{app.user.pseudo}}{% endblock %}
{% block noindex %}<meta name="robots" content="noindex">{% endblock %}

{% block body %}

    <div class="editor__form-wrapper">

        <h2 class="editor__title">Éditer mes informations</h2>

        <div class="editor__form">
            {{ form_start(formUser) }}
                {% form_theme formUser 'forms/fields.twig' %}
    
                {{ form_row(formUser.pseudo) }}
                {{ form_row(formUser.email) }}

                <p>Si vous modifiez votre adresse, un mail vous sera envoyé afin de vérifier votre nouvelle adresse</p>

                <div class="editor__buttons-box">
                    <a href="{{path("view_profile")}}" class="editor__btn editor__cancel">Annuler</a>
                    {{ form_row(formUser.submit) }}
                </div>

                
                
                {{ form_end(formUser) }}
                
            </div>
            
    </div>

{% endblock %}