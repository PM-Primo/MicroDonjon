{% extends 'dashboard.html.twig' %}

{% block title %}MicroDonjon{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>Éditeur de chapitres à combat</h1>

    {{ form_start(formAddChapCombat) }}

        {{ form_row(formAddChapCombat.titreChapitre) }}
        {{ form_row(formAddChapCombat.texteInitial) }}
        {{ form_row(formAddChapCombat.texteVictoire) }}
        {{ form_row(formAddChapCombat.zone) }}
        {{ form_row(formAddChapCombat.monstre) }}

        <br>
        Sorties :
        <br><br>

        <div id="listeSorties" 
            data-prototype="{{ form_widget(formAddChapCombat.sorties.vars.prototype)| e('html_attr') }}"
            data-index="0">
            {% for sortie in formAddChapCombat.sorties %}
                <div class="card">
                    {{ form_row(sortie) }}
                </div>
                <br>
            {% endfor %}
            <a id="addSortie" href="#" class="">Ajouter une sortie</a><br><br>
        </div>

        {{ form_row(formAddChapCombat.submit) }}

    {{ form_end(formAddChapCombat) }}

</div>
{% endblock %}